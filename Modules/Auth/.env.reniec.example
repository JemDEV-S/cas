# ===================================
# CONFIGURACIÓN DEL SERVICIO RENIEC
# ===================================

# Habilitar o deshabilitar el servicio de validación de DNI
RENIEC_ENABLED=true

# URL de la API de PeruDevs
RENIEC_API_URL=https://api.perudevs.com/api/v1

# Token de API de PeruDevs (REQUERIDO si RENIEC_ENABLED=true)
# Obtener en: https://apiperu.dev/
RENIEC_API_TOKEN=cGVydWRldnMucHJvZHVjdGlvbi5maXRjb2RlcnMuNjYxOTk4ZGNkNDFiOTQxMTE0OGI1NzY4

# Timeout en segundos para las peticiones HTTP (por defecto: 10)
RENIEC_API_TIMEOUT=10

# Número de reintentos en caso de error de red o 5xx (por defecto: 3)
RENIEC_API_RETRY_TIMES=3

# Tiempo de espera entre reintentos en milisegundos (por defecto: 1000)
RENIEC_API_RETRY_SLEEP=1000

# Habilitar caché (recomendado para reducir costos de API)
RENIEC_CACHE_ENABLED=true

# Tiempo de vida del caché en segundos (por defecto: 3600 = 1 hora)
RENIEC_CACHE_TTL=3600

# Enmascarar datos sensibles en logs (cumplimiento LPDP)
# true: 12345678 -> ****5678 en logs
# false: muestra DNI completo (no recomendado en producción)
RENIEC_MASK_LOGS=true

# Deshabilitar verificación SSL (solo usar si hay problemas con certificados en el servidor)
# ADVERTENCIA: Deshabilitar SSL reduce la seguridad. Solo usar temporalmente.
# true: Deshabilita la verificación SSL
# false: Habilita la verificación SSL (recomendado en producción)
RENIEC_DISABLE_SSL_VERIFY=true
